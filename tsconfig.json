{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "target": "ES2015",
    "moduleResolution": "Node",
    "lib": ["ES2015", "DOM"],
    "isolatedModules": false,
    "esModuleInterop": false,
		"emitDeclarationOnly": false,
    "outDir": "types",
		"declaration": true,
  },
  "exclude": [
		"node_modules",
		"dist"
	],
  "include": [
    "./src/**/*"
  ]
}